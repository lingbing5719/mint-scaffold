<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor name="servicearchetype">
    <requiredProperties>
        <requiredProperty key="projectName">
            <defaultValue>${artifactId}</defaultValue>
        </requiredProperty>
        <requiredProperty key="classPrefix">
            <defaultValue>${artifactId.replaceAll("[^0-9A-z]", "").substring(0, 1).toUpperCase()}${artifactId.replaceAll("[^0-9A-z]", "").substring(1)}</defaultValue>
        </requiredProperty>
    </requiredProperties>

    <fileSets>
        <fileSet filtered="false" encoding="UTF-8">
            <directory>tools</directory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet filtered="false" encoding="UTF-8">
            <directory/>
            <includes>
